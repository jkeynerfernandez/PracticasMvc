<form asp-action="Search" asp-controller="Users" method="get">
    <input type="text" name="Names" placeholder="Buscar por nombre">
    <button type="submit">Buscar</button>
</form>


<table class="table table-striped">
    <thead  class="table-light">
        <tr>
            <th>ID</th>
            <th>Names</th>
            <th>ACTIONS</th>

        </tr>
    </thead>

    @foreach(var user in Model){
         <tr>
            <th>@user.Id</th>
            <th>@user.Names</th>
            <th>
                <a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" method="get" class="btn btn-info">Details</a>
                <a asp-area="" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Update</a>
                <a asp-area="" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>

            </th>

        </tr>

    }
</table>